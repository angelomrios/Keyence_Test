extends ../layout/index

block contenido
  div.py-8
    h1.text-4xl.my-8.font-extrabold.text-center Asistencia 
      span.font-normal de Personal
    h2.text-center.text-2xl.font-extrabold Entrada

    if errores 
      div(class="max-w-md mx-auto my-10")
        each error in errores 
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    div.mt-6.mx-auto.max-w-md
      div.bg-white.py-6.px-4.shadow
        form.space-y-5(method="POST" action="/asistencia/entrada")
          div
            label.block.text-sm.uppercase.text-gray-500.mb-1.font-bold ID 
            input#empleadx.w-full.px-3.py-2.mb-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="ID" type="number" name="empleadx" value= usuario.empleadx ? usuario.empleadx : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Nombre 
            input#nombre.w-full.px-3.py-2.mb-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre" type="text" name="nombre" value= usuario.nombre ? usuario.nombre : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Fecha 
            input#fecha.w-full.px-3.py-2.mb-2.border.border-gray-300.rounded-md.placeholder-gray-400(disabled="disabled" type="date" name="Fecha" value= usuario.fecha ? usuario.fecha : '')
          div
            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold Hora de entrada 
            input#entrada.w-full.px-3.py-2.mb-4.border.border-gray-300.rounded-md.placeholder-gray-400(disabled="disabled" type="time" name="horaIn" value= usuario.horaIn ? usuario.horaIn : '')

          .flex.items-center.justify-between.mb-3
            a.text.gray-500.text-xs(href="/asistencia/salida") Registrar Salida
            a.text.gray-500.text-xs(href="/asistencia/exportar") Exportar datos

          input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar")